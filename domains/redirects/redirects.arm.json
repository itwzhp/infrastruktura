{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "domains": { "type": "array" }
    },
    "variables": {
        "storageAccountName": "zhpredirectsstorage",
        "servicePlanName": "zhp-redirects-serviceplan",
        "applicationInsightsName": "zhp-redirects-insights",
        "functionAppName": "zhp-redirects"
    },
    "resources": [
        {
            "type": "Microsoft.Storage/storageAccounts",
            "name": "[variables('storageAccountName')]",
            "apiVersion": "2019-06-01",
            "location": "[resourceGroup().location]",
            "sku": {
                "name": "Standard_LRS",
                "tier": "Standard"
            },
            "kind": "StorageV2"
        },
        {
            "type": "Microsoft.Web/serverfarms",
            "apiVersion": "2018-02-01",
            "name": "[variables('servicePlanName')]",
            "location": "[resourceGroup().location]",
            "kind": "functionapp",
            "sku": {
                "name": "Y1",
                "tier": "Dynamic",
                "size": "Y1",
                "family": "Y",
                "capacity": 0
            },
            "properties": {
                "name": "[variables('servicePlanName')]",
                "reserved": true
            }
        },
        {
            "type": "microsoft.insights/components",
            "apiVersion": "2020-02-02-preview",
            "name": "[variables('applicationInsightsName')]",
            "location": "[resourceGroup().location]",
            "properties": {
                "Application_Type": "web",
                "ApplicationId": "[variables('applicationInsightsName')]"
            }
        },
        {
            "type": "Microsoft.Web/sites",
            "apiVersion": "2018-11-01",
            "name": "[variables('functionAppName')]",
            "location": "[resourceGroup().location]",
            "kind": "functionapp,linux",
            "dependsOn": [
                "[variables('storageAccountName')]",
                "[variables('applicationInsightsName')]",
                "[variables('servicePlanName')]"
            ],
            "properties": {
                "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', variables('servicePlanName'))]",
                "siteConfig": {
                    "linuxFxVersion": "NODE|14-lts",
                    "appSettings": [
                        {
                            "name": "AzureWebJobsStorage",
                            "value": "[concat('DefaultEndpointsProtocol=https;AccountName=', variables('storageAccountName'), ';AccountKey=', listKeys(resourceId('Microsoft.Storage/storageAccounts', variables('storageAccountName')),'2019-06-01').keys[0].value)]"
                        },
                        {
                            "name": "FUNCTIONS_EXTENSION_VERSION",
                            "value": "~3"
                        },
                        {
                            "name": "FUNCTIONS_WORKER_RUNTIME",
                            "value": "node"
                        },
                        {
                            "name": "APPINSIGHTS_INSTRUMENTATIONKEY",
                            "value": "[reference(resourceId('microsoft.insights/components', variables('applicationInsightsName')), '2020-02-02-preview').InstrumentationKey]"
                        },
                        {
                            "name": "APPLICATIONINSIGHTS_CONNECTION_STRING",
                            "value": "[reference(resourceId('microsoft.insights/components', variables('applicationInsightsName')), '2020-02-02-preview').ConnectionString]"
                        }
                    ]
                }
            }
        },
        {
            "apiVersion": "2018-11-01",
            "name": "[concat(variables('functionAppName'),'/',parameters('domains')[copyIndex()])]",
            "type": "Microsoft.Web/sites/hostNameBindings",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[variables('functionAppName')]"
            ],
            "copy": {
                "count": "[length(parameters('domains'))]",
                "name": "domains-loop",
                "mode": "Serial",
                "batchSize": 1
            },
            "properties": {
                "hostNameType": "Verified",
                "siteName": "[variables('functionAppName')]"
            }
        },
        {
            "apiVersion": "2020-12-01",
            "type": "Microsoft.Web/certificates",
            "location": "[resourceGroup().location]",
            "name": "[parameters('domains')[copyIndex()]]",
            "dependsOn": [
                "[resourceId('Microsoft.Web/sites', variables('functionAppName'))]",
                "[resourceId('Microsoft.Web/sites/hostNameBindings', variables('functionAppName'), parameters('domains')[copyIndex()])]"
            ],
            "copy": {
                "count": "[length(parameters('domains'))]",
                "name": "cert-loop",
                "mode": "Serial",
                "batchSize": 1
            },
            "properties": {
                "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', variables('servicePlanName'))]",
                "canonicalName": "[parameters('domains')[copyIndex()]]"
            }
        },
        {
            "apiVersion": "2021-04-01",
            "type": "Microsoft.Resources/deployments",
            "name": "[concat('linkedTemplate', parameters('domains')[copyIndex()])]",
            "dependsOn": [
                "[resourceId('Microsoft.Web/sites', variables('functionAppName'))]",
                "[resourceId('Microsoft.Web/certificates', parameters('domains')[copyIndex()])]"
            ],
            "copy": {
                "count": "[length(parameters('domains'))]",
                "name": "domains-import-loop",
                "mode": "Serial",
                "batchSize": 1
            },
            "properties": {
                "mode": "Incremental",
                "template": {
                    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
                    "contentVersion": "1.0.0.0",
                    "resources": [
                        {
                            "apiVersion": "2020-10-01",
                            "name": "[concat(variables('functionAppName'),'/',parameters('domains')[copyIndex()])]",
                            "type": "Microsoft.Web/sites/hostNameBindings",
                            "location": "[resourceGroup().location]",
                            "properties": {
                                "sslState": "SniEnabled",
                                "thumbprint": "[reference(resourceId('Microsoft.Web/certificates', parameters('domains')[copyIndex()])).Thumbprint]"
                            }
                        }
                    ]
                }
            }
        }
    ]
}
